                <Detect2Chars char="/" char1="/" attribute="Comment" context="EndLineComment"/>
                <Detect2Chars char="/" char1="*" attribute="Comment" context="InlineComment" beginRegion="Comment"/>
            </context>

            <context name="C48Code" attribute="Normal">
